{
    "manifest_version": 3,
    "name": "gm mark test",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/utils.js",
                "scripts/model.js",
                "scripts/toolbar.js",
                "scripts/content.js"
            ],
            "css": [
                "css/custom.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/rubber.png"
            ],
            "matches": [
               "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}